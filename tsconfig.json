{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@components": [
        "common/components"
      ],
      "@components/*": [
        "common/components/*"
      ],
      "@layouts": [
        "layouts"
      ],
      "@layouts/*": [
        "layouts/*"
      ],
      "@forms": [
        "common/forms"
      ],
      "@forms/*": [
        "common/forms/*"
      ],
      "@sections": [
        "common/sections"
      ],
      "@sections/*": [
        "common/sections/*"
      ],
      "@views": [
        "views"
      ],
      "@views/*": [
        "views/*"
      ]
    },
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
