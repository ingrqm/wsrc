{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@layouts": [
        "layouts"
      ],
      "@layouts/*": [
        "layouts/*"
      ],
      "@views": [
        "views"
      ],
      "@views/*": [
        "views/*"
      ],
      "@forms": [
        "common/forms"
      ],
      "@forms/*": [
        "common/forms/*"
      ],
      "@components": [
        "common/components"
      ],
      "@components/*": [
        "common/components/*"
      ],
      "@enums": [
        "enums"
      ],
      "@enums/*": [
        "enums/*"
      ],
      "@providers": [
        "providers"
      ],
      "@providers/*": [
        "providers/*"
      ],
      "@redux": [
        "redux"
      ],
      "@redux/*": [
        "redux/*"
      ],
      "@utils": [
        "components"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@contracts": [
        "contracts"
      ],
      "@contracts/*": [
        "contracts/*"
      ]
    },
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "jsx": "preserve"
  },
  "include": [
    "additional.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "assets",
    "node_modules"
  ]
}
