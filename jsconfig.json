{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "src/",
    "paths": {
      "@components": [
        "common/components"
      ],
      "@components/*": [
        "common/components/*"
      ],
      "@layouts": [
        "base/layouts"
      ],
      "@layouts/*": [
        "base/layouts/*"
      ],
      "@forms": [
        "common/forms"
      ],
      "@forms/*": [
        "common/forms/*"
      ],
      "@sections": [
        "common/sections"
      ],
      "@sections/*": [
        "common/sections/*"
      ],
      "@pages": [
        "modules"
      ],
      "@pages/*": [
        "modules/*"
      ]
    }
  }
}
